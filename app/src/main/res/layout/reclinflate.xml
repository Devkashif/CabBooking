<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fromcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/fragment_bg"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/crdhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:elevation="10dp"
            android:clickable="true"

            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/cardview_compat_inset_shadow">


            <TextView
                android:id="@+id/btype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Gurgaon Office To Home"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/startlocation" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_more_vert_black_24dp" />


            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="81dp"
                android:src="@drawable/drop" />

            <TextView
                android:id="@+id/flocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="44dp"
                android:text="Plot 92, Sector-44, Gurgaon" />

            <TextView
                android:id="@+id/tolocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:text="65/59 NewRohtak Road, Karol Bagh, New Delhi" />


            <TextView
                android:id="@+id/dttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                android:drawableLeft="@drawable/calendar"
                android:gravity="center"
                android:text="  10/03/2019 at 12:15"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/bstatus"
                android:layout_width="50dp"
                android:layout_height="20sp"
                android:layout_gravity="right"
                android:layout_marginTop="150dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:foreground="@drawable/shadocard"
                android:background="@drawable/circle"
                android:gravity="center"
                android:padding="5dp"
                android:text="Pending..."
                android:textSize="18px" />


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>